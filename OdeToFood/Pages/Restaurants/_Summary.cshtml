@using OdeToFood.Core
@model Restaurant

<div class="panel panel-default">
  <div class="panel-heading">
    <h3>@Model.Name</h3>
  </div>
  <div class="panel-body">
    <span>Location: @Model.Location</span>
    <span>Cuisine: @Model.Cuisine</span>
  </div>
  <div class="panel-footer">
    <span class="btn-group">
      <a asp-page="./Detail" asp-route-id="@Model.Id" class="btn btn-info">
        <i class="glyphicon glyphicon-info-sign"></i>
        Details
      </a>
      <a asp-page="./Edit" asp-route-id="@Model.Id" class="btn btn-info">
        <i class="glyphicon glyphicon-edit"></i>
        Edit
      </a>
      <a asp-page="./Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="glyphicon glyphicon-trash"></i>
        Delete
      </a>
    </span>
  </div>
</div>
