@* /Restaurants/Edit/{id} *@
@page "{id:int?}"
@model OdeToFood.Pages.Restaurants.EditModel
@{
  ViewData["Title"] = "Edit";

  string titelText = Model.Restaurant.Id != default(int) ? 
    string.Concat("Editing", Model.Restaurant.Name) : 
    string.Concat("Creating new Restaurant");
}

<header>
  <h2>@titelText</h2>
</header>
<section>
  <div>
    <form method="post">
      <input type="hidden" asp-for="Restaurant.Id">
      <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input class="form-control" value="@Model.Restaurant.Name" asp-for="Restaurant.Name">
        <span class="text-danger" asp-validation-for="Restaurant.Name"></span>
      </div>
      <div class="form-group">
        <label asp-for="Restaurant.Location"></label>
        <input class="form-control" value="@Model.Restaurant.Location" asp-for="Restaurant.Location">
        <span class="text-danger" asp-validation-for="Restaurant.Location"></span>
      </div>
      <div class="form-group">
        <label asp-for="Restaurant.Cuisine"></label>
        <select class="form-control" asp-for="Restaurant.Cuisine" asp-items="Model.Cuisines"></select>
        <span class="text-danger" asp-validation-for="Restaurant.Cuisine"></span>
      </div>
      <div>
        <span class="btn-group">
          <a asp-page="./List" class="btn btn-default">
            <i class="glyphicon glyphicon-arrow-left"></i>
            Back
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="glyphicon glyphicon-save"></i>
            Save
          </button>
        </span>
      </div>
    </form>
  </div>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
